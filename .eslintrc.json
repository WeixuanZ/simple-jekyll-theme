{
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "prettier",
    "prettier/standard"
  ],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["off", "never"],
    "no-var": "error",
    "no-unused-vars": "warn",
    "no-multiple-empty-lines": "warn",
    "no-inner-declarations": "off",
    "object-curly-spacing": "off",
    "comma-dangle": "warn",
    "space-before-function-paren": "off"
  }
}
